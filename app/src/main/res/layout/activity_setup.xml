<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chonsocauhoi"
        android:background="#f5f5f5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtTitle"
            android:text="Chọn số câu hỏi"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="20sp"
            android:textColor="#ffa384"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập tên người chơi:"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/EdtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/TxtError"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vui lòng nhập vào tên người chơi"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Txt3"
            android:text="Số câu hỏi bạn chọn:"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <Spinner
            android:id="@+id/spinNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            />

        <Button
            android:id="@+id/BtnNext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tiếp theo"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/optiondesign"
            android:textColor="#142638"
            />

        <Button
            android:id="@+id/BtnBack"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Trở về"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/optiondesign"
            android:textColor="#142638"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>