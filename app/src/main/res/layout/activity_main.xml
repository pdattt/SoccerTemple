<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTop"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background1">

        <TextView
            android:id="@+id/Txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:shadowColor="#FFB404"
            android:shadowRadius="10"
            android:text="NGÔI ĐỀN"
            android:textAlignment="center"
            android:textColor="#ededed"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Txt1"
            android:layout_marginTop="5dp"
            android:shadowColor="#FFB404"
            android:shadowRadius="10"
            android:text="HUYỀN THOẠI"
            android:textAlignment="center"
            android:textColor="#FCC201"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BtnPlay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Bắt đầu"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/Txt2"
            android:background="@drawable/button_rounded_conners"
            android:backgroundTint="#ededed"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/BtnHighScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Điểm cao"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_below="@id/BtnPlay"
            android:background="@drawable/button_rounded_conners"
            android:backgroundTint="#ededed"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/BtnHistory"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Lịch sử"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/BtnHighScore"
            android:background="@drawable/button_rounded_conners"
            android:backgroundTint="#ededed"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/BtnExit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_below="@id/BtnHistory"
            android:background="@drawable/button_rounded_conners"
            android:backgroundTint="#ededed"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:layout_below="@+id/BtnExit"
            android:layout_marginTop="-92dp"
            app:srcCompat="@drawable/soccer" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>